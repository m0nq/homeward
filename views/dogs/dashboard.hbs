<!-- script for rendering all dogs -->
<script id="doglisttemp" type="text/x-handlebars-template">
<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-center">
    \{{#each dogs}}
    <div class="row">
        <container class="index">
            <img src=\{{image}}>
            <div class="data" class="index">
                <a href="/dashboard/\{{_id}}" class="attributes"><h4 class="dog-name" id="dog-name">\{{name}}</h4> </a>
                <h5><span class = "bold">status:</span> \{{status}}</h5>
                <h5><span class = "bold">color:</span> \{{color}}</h5>
                <h5><span class = "bold">breed:</span> \{{breed}}</h5>
                <h5><span class = "bold">size:</span> \{{size}}</h5>
                <h5><span class = "bold">neighborhood:</span> \{{neighborhoods}}</h5>
                <h5><span class = "bold">status:</span> \{{status}}</h5>


            </div>

        </container>
    </div>
    \{{/each}}
</div>
</script>
<!-- script for client side rendering of new dog -->
<script id="dog-template" type="text/x-handlebars-template">
