              <a href="/dashboard/\{{_id}}" class="attributes"><h4 class="dog-name" id="dog-name">\{{dog.name}}</h4> </a>
              <h5><span class = "bold">name:</span> \{{dog.name}}</h5>
              <h5><span class = "bold">status:</span> \{{dog.status}}</h5>
              <h5><span class = "bold">color:</span> \{{dog.color}}</h5>
              <h5><span class = "bold">breed:</span> \{{dog.breed}}</h5>
              <h5><span class = "bold">neighborhoods:</span> \{{dog.neighborhoods}}</h5>
              <h5><span class = "bold">location:</span> \{{dog.location}}</h5>


          </div>
      </container>
  </div>

</script>


